{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": { "ignoreUnknown": false },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 120,
		"includes": ["**", "!**/dist"]
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": false },
		"includes": ["**", "**/dist/*"]
	},
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	}
}
